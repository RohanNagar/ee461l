<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.CreateMeetingChooseTimeActivity"
    tools:showIn="@layout/activity_create_meeting_choose_time">

    <EditText
        android:id="@+id/activity_create_meeting_choose_time_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/meeting_name"
        />

    <TextView
        android:id="@+id/activity_create_meeting_date_text_view"
        android:text="Choose a Date:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_meeting_choose_time_name" />

    <Button
        android:id="@+id/create_meeting_choose_activity_open_begin_date_picker"
        android:text="Choose a start date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_meeting_date_text_view" />

    <TextView
        android:id="@+id/activity_create_meeting_start_time_text_view"
        android:text="Choose a start time:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_meeting_choose_activity_open_begin_date_picker" />

    <Button
        android:id="@+id/create_meeting_choose_time_open_begin_time_picker"
        android:text="Choose a start time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_meeting_start_time_text_view" />

    <TextView
        android:id="@+id/activity_create_meeting_end_date_text_view"
        android:text="Choose a Date:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_meeting_choose_time_open_begin_time_picker" />

    <Button
        android:id="@+id/create_meeting_choose_activity_open_end_date_picker"
        android:text="Choose an end date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_meeting_end_date_text_view" />

    <TextView
        android:id="@+id/activity_create_meeting_end_time_text_view"
        android:text="Choose an end time:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_meeting_choose_activity_open_end_date_picker" />

    <Button
        android:id="@+id/create_meeting_choose_time_open_end_time_picker"
        android:text="Choose a start time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_create_meeting_end_time_text_view" />

    <!--
    <TextView
        android:id="@+id/create_meeting_choose_start_date_text_view"
        android:text="Placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/create_meeting_choose_activity_open_begin_picker" /> -->

</RelativeLayout>
